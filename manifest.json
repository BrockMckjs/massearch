{
    "name": "Massearcher",
    "browser_action": {
        "default_popup": "front.html"
    },
    "manifest_version": 2,
    "version": "1.0",
    "description": "Search multiple search engines",
    "permissions": [
        "activeTab",
        "tabs"

    ],

    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },


    "background": {
        "scripts": ["background.js"],
        "persistent": false

    },

    "content_scripts": [{
        "matches": [
            "<all_urls>"
        ],
        "js": ["search.js"]
    }]
}